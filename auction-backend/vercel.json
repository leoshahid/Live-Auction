{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/server.js"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "JWT_SECRET": "@jwt_secret",
    "JWT_EXPIRE": "@jwt_expire",
    "CORS_ORIGIN": "@cors_origin",
    "AUCTION_DURATION": "@auction_duration",
    "BID_EXTENSION_TIME": "@bid_extension_time"
  }
} 